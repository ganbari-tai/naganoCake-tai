<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
  </div>


    </div>
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
      <% end %>
    </div>
    
      <table>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        
        <% @items.each do |item| %>
        
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name,admin_item_path(item.id) %></td>
            <td><%= item.price %>円</td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                <strong>販売中</strong>
              <% else %>
                <strong>販売停止中</strong>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @items %>
</div>
