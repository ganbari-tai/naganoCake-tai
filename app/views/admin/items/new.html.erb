<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-2">
      <h2 class="text-center bg-light">商品新規登録</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-20 px-sm-0 mx-auto ">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group" >
            <th><%= f.label :商品画像 %></th>
            <th><%= f.file_field :image, accept: "image/*" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品名 %></th>
            <th><%= f.text_field :name, placeholder:"商品名" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品説明 %></th>
            <th><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :ジャンル %></th>
            <th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :税抜価格 %></th>
            <th><%= f.number_field :price, placeholder:"1000" %>円</th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :販売ステータス %></th>
            <td><%= f.radio_button :is_active, true %><%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, false %><%= f.label :is_active, "販売停止中" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-action">
            <th><%= f.submit "新規登録", class:"btn btn-success" %></th>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
