<h2>商品編集</h2>

<%= form_with model: @item, url: admin_items_path, local: true do |f| %>
<table>
  <tr>
    <div class="form-group">
      <th><%= f.label :商品画像 %></th>
      <th><%= f.file_field :image, accept: "image/*" %></th>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <th><%= f.label :商品名 %></th>
      <th><%= f.text_field :name, placeholder:"商品名" %></th>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <th><%= f.label :商品説明 %></th>
      <th><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></th>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <th><%= f.label :ジャンル %></th>
      <th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></th>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <th><%= f.label :税抜価格 %></th>
      <th><%= f.text_field placeholder:"1000" %>円</th>
    </div>
  </tr>
  <tr>
    <div class="form-group">
      <th><%= f.label :販売ステータス %></th>
      <th><%= f.radio_button :status, false %><%= f.label :status, "販売中" %></th>
      <th><%= f.radio_button :status, false %><%= f.label :status, "販売停止中" %></th>
    </div>
  </tr>
  <tr>
    <div class="form-action">
      <th><%= f.submit "変更を保存", class:"btn btn-success" %></th>
    </div>
  </tr>
<% end %>
</table>