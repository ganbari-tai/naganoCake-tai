<h2>注文履歴詳細</h2>
<table>
  <tr>
    <td><b>購入者</b></td>
    <td><%= @order.customer_id_full_name %></td>
  </tr>
  <tr>
    <td><b>注文日</b></td>
    <td><%= @order.create_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td><b>配送先</b></td>
    <td><%= @order.postal_code %></td>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <td></td>
    <td>name</td>
  </tr>
  <tr>
    <td><b>支払い方法</b></td>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <td><b>注文ステータス</b></b></td>
    <%= form_with　model: @order ,url: admin_order_path, method: :ptach do |f| %>
    <td><%= f.select :status, [["入金待ち","0"],["入金確認","1"],["制作中","2"],["発送準備中","3"],["発送済み","4"]]%></td>
    <td><%= f.submit '更新' %></td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%  @order_details.each do || %>
    <tr>
      <td><%= @order_details.name %></td>
      <td><%= @order_details.price %></td>
      <td><%= @order_details.amount %></td>
      <td><%= @order_details.subtotal_price %></td>
      <td>
         <%= form_with　model: @order_details ,url: admin_order_detail_path, method: :ptach do |f| %>
        <%= f.select :making_status, [["製作不可","0"],["製作待ち","1"],["作製中","2"],["作製完了","3"]]%></td>
      <td><%= f.submit '更新' %></td>
    </tr>
  </tbody>
</table>

