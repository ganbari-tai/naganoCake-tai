<%= stylesheet_link_tag "top_styles" %>
<div class="container login">
  <div class="row">
      <h5 class="mb-5 mt-5 px-4" style="background-color: orange;">管理者ログイン</h5>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mx-auto mb-3" style="width: 1000px;">
      <div class="col-md-2">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-md-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50x20" %>
      </div>
    </div>


    <div class="row mx-auto mb-5" style="width: 1000px;">
      <div class="col-md-2">
        <%= f.label :パスワード %>
      </div>
      <div class="col-md-8">
      <%= f.password_field :password, autocomplete: "current-password", size: "50x20" %>
      </div>
    </div>
    <!--<% if devise_mapping.rememberable? %>-->
    <!--  <div class="field">-->
    <!--    <%= f.check_box :remember_me %>-->
    <!--    <%= f.label :remember_me %>-->
    <!--  </div>-->
    <!--<% end %>-->

    <div class="row mx-auto col-md-2 ">
      <%= f.submit "ログイン",class: 'btn btn-sm btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>

