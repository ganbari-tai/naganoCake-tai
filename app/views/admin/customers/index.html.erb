<%= stylesheet_link_tag "public_stlys_address" %>

<div class="container">
  <div class="col-md-10 mx-auto">
    <div class="row justify-content-center">
      <h2 class="my-4">会員一覧</h2>
    </div>
  
    <table class='table table-hover table-borderless' >
      <thead class="thead-light text-center">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% @customers.each do |customer| %>
        <tr>
          <td class=><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer.id), method: :get %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active == true %>
              <p class="text-success"><b>有効</b></p>
            <% else customer.is_active == false %>
              <p class="text-black-50"><b>退会</b></p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-9 mx-auto">  
      <%= paginate @customer_page %>
    </div>
  </div>
</div>  