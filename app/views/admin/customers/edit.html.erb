<div class="container-fluid">
  <div class="row m-3">
    <h2>
      <%= @customer.full_name %>さんの会員情報編集
    </h2>
  </div>
  <div class="form-group ml-3">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :id, '会員ID' %>
      </div>
      <div class="col">
        <%= @customer.id %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :full_name, '氏名' %>
      </div>
      <div class="col">
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :full_name_kana, 'フリガナ' %>
      </div>
      <div class="col">
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :postal_code, '郵便番号' %>
      </div>
      <div class="col">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :address, '住所' %>
      </div>
      <div class="col">
        <%= f.text_field :address %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :phone_number, '電話番号' %>
      </div>
      <div class="col">
        <%= f.text_field :phone_number %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :email, 'メールアドレス' %>
      </div>
      <div class="col">
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2 col-form-label">
        <%= f.label :is_active, '会員ステータス' %>
      </div>
      <div class="col-2">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>
      </div>
      <div class="col-2">
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "退会" %>
      </div>
    </div>
    <div class="form-group row justify-content-end">
      <div class="col-8">
        <%= f.submit '変更を保存', class:"btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>