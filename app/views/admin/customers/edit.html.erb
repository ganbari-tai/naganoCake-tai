<h2>
  <%= @customer.full_name %>さんの会員情報編集
</h2>
<div class="form-group">
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :id, '会員ID' %>
    <%= @customer.id %>
  </div>
  <div class="form-group">
    <%= f.label :full_name, '氏名' %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= f.label :full_name_kana, 'フリガナ' %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
    <%= f.label :postal_code, '郵便番号' %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, '電話番号' %>
    <%= f.text_field :phone_number %>
  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :is_active, '会員ステータス' %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効" %>

    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "退会" %>

  </div>
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  <% end %>
</div>
