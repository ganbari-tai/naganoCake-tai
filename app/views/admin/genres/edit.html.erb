<%= stylesheet_link_tag "public_stlys_address" %>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container col-11">
    <h2 class="mt-5">ジャンル編集</h2>
  
  <div class="row mt-5 ml-2 col-9">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="d-flex">
      <div class="form-group col">
        <b><%= f.label :name, 'ジャンル名' %></b>
      </div>
      <div class="form-group col">
        <%= f.text_field :name %>
      </div>
      <div class="form-group col">
        <%= f.submit '変更を保存', class:"btn btn-success" %>
      </div>
    </div>  
    <% end %>
  </div>
</div>