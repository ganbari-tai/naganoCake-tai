<div class="container-fluid">
  <h2>配送先編集</h2>
  
  <div class="form-group">
    <%= form_with model: @address, url: address_path, method: :patch do |f|%>
      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
        </div>
        <div class="col">
          <%= f.number_field :postal_code %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label :address, '住所' %>
        </div>
        <div class="col-5">
          <%= f.text_field :address, style: "width: 150%" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2 col-form-label">
          <%= f.label :name, '宛名' %>
        </div>
        <div class="col">
          <%= f.text_field :name %>
        </div>
        <div class="col">
          <%= f.submit '変更内容を保存', class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>