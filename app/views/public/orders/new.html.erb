<div class="container">
  <div class="row">
    <div class="mt-4">
      <!--confirmにデータを渡す-->
      <%= form_with model: @order, url:'/order/confirm', method: :post do |f| %>
        <h3>注文情報入力</h3>
        
        <h5 class="font-weight-bold">支払方法</h5>
        <div class="ml-4">
          <%= f.radio_button :payment_method, :credit_card, checked: true %>
          <%= f.label :payment_method_credit_card, "クレジットカード" %>
        </div>
        <div class="ml-4">
          <%= f.radio_button :payment_method, :transfer %>
          <%= f.label :payment_method_transfer, "銀行振込" %>
        </div>
        
        <h5 class="font-weight-bold">お届け先</h5>
        <div class="ml-4">
          <%= f.radio_button :address_selection, 0, checked: true %>
          <label>ご自身の住所</label>
        </div>
        <div class="ml-5">
          〒<%= current_customer.postal_code %><%= current_customer.address %><br />
          <%= current_customer.last_name %><%= current_customer.first_name %>
        </div>
        <div class="ml-4">
          <%= f.radio_button :address_selection, 1 %>
          <label>登録済住所から選択</label>
        </div>
        <div class="ml-5">
          <%= f.collection_select :address_id, Address.all, :id, :full_address, include_blank: "選択して下さい", class: "form-control" %>
        </div>
        
        <div class="ml-4">
          <%= f.radio_button :address_selection, 2 %>
          <label>新しいお届け先</label>
        </div>
        <div class="ml-5 form-group row">
          <label class="col-6 control-label">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, placeholder:"0000000", class: "form-control col-6" %>
        </div>
        <div class="ml-5 form-group row">
          <label class="col-6 control-label">住所</label>
          <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class: "form-control col-6" %>
        </div>
        <div class="ml-5 form-group row">
          <label class="col-6 control-label">宛名</label>
          <%= f.text_field :name, placeholder:"令和道子", class: "form-control col-6" %>
        </div>
        
        <%= f.submit '確認画面へ進む', class: "btn btn-primary mx-auto" %>
        
      <% end %>
    </div>
  </div>
</div>