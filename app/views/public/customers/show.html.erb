<div class=“container”>
  <h2>マイページ</h2>
  <div class="row">
    <div class="col">
      <h5><b>登録情報</b></h5>
    </div>
    <div class="col">
      <%= link_to "編集する", customers_infomation_edit_path, class:"btn btn-success" %>
    </div>
  </div>
  <table class="table table-bordered" >
    <tr>
      <td class="table-secondary">氏名</td>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <td class="table-secondary">カナ</td>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <td class="table-secondary">郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td class="table-secondary">住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td class="table-secondary">電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td class="table-secondary">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  <div class="row ml-1">
    <div class "col">
      <h5><b>配送先</b></h5>
    </div>
    <div class "col">
      <%= link_to '一覧をみる', addresses_path, class:"btn btn-primary" %>
    </div>
  </div>
  <div class="row ml-1">
    <div class "col">
      <h5><b>注文履歴</b></h5>
    </div>
    <div class "col">
      <%= link_to '一覧を見る', orders_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>