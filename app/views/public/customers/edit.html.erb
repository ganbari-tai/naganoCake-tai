
  <h1>会員情報編集</h1>
  <div class="form-group">
    <%= form_with model:@customer,url:customers_infomation_path, method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :full_name, '氏名' %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group">
      <%= f.label :full_name_kana, 'フリガナ' %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
    <div class="form-group">
      <%= f.label :postal_code, '郵便番号' %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="form-group">
      <%= f.label :address, '住所' %>
      <%= f.text_field :address %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, '電話番号' %>
      <%= f.text_field :phone_number %>
    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email %>
    </div>
      <%= f.submit '編集内容を保存', class:"btn btn-success" %>
      <%=link_to '退会する',customers_unsubscribe_path, method: :get ,class:"btn btn-danger" %>
    <% end %>
  </div>

