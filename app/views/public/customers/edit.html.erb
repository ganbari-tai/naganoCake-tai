<%= stylesheet_link_tag "public_stlys_address" %>

<div class="container-fluid m-2">
  <h2>会員情報編集</h2>
  
  <div class="form-group">
    <%= form_with model: @customer,url: customers_infomation_path, method: :patch do |f| %>
    <div class="form-group row ml-5">
      <div class="col-2 col-form-label">
        <%= f.label :full_name, '氏名' %>
      </div>
      <div class="col">
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="form-group row ml-5">
      <div class="col-2 col-form-label">
        <%= f.label :full_name_kana, 'フリガナ' %>
      </div>
      <div class="col">
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="form-group row ml-5">
      <div class="col-2 col-form-label">
        <%= f.label :postal_code, '郵便番号' %>
      </div>
      <div class="col">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    <div class="form-group row ml-5">
      <div class="col-2 col-form-label">
        <%= f.label :address, '住所' %>
      </div>
      <div class="col-5">
        <%= f.text_field :address,style: "width: 100%"  %>
      </div>
    </div>
    <div class="form-group row ml-5">
      <div class="col-2 col-form-label">
        <%= f.label :phone_number, '電話番号' %>
      </div>
      <div class="col">
        <%= f.text_field :phone_number %>
      </div>
    </div>
    <div class="form-group row ml-5">
      <div class="col-2 col-form-label">
        <%= f.label :email, 'メールアドレス' %>
      </div>
      <div class="col">
        <%= f.email_field :email %>
      </div>
    </div>
    
    <div class="form-group row ml-5">
      <div class="col-2 col-form-label">
      </div>
      <div class="col-2">
        <%= f.submit '編集内容を保存', class:"btn btn-success" %>
      </div>
      <div class="col">
        <%=link_to '退会する',customers_unsubscribe_path, method: :get, class:"btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>

