<%= stylesheet_link_tag "publicitems_styles" %>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-3 align-self-center">
      <%= render 'genre' %>
    </div>
    
    <div class="col-md-4 mx-auto">
      <p><%= image_tag @item.get_image,size: "250x220" %></p>
    </div>
    
    <div>
      <h2><strong><%= @item.name %></strong></h2>
      <h4><%= @item.introduction %></h4>
      <%  if @item.is_active == true %>
        <p>販売中</p>
        <h3>¥ <%= @item.add_tax_price %> <span class="small-font">(税込)</span></h3>
          <p>
            <%= form_with model: @cart_item, local:true do |f| %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.number_field :amount, placeholder:"個数を選択",  min: 1 %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            <% end %>
          </p>
      <% else %>
        <h3>販売停止中です</h3>
      <% end %>
    </div>
  </div>
</div> 

