<div class="container-fluid">
  <div class="row mt-15">

      

    <div class="text-center col-md-9">
      <h2>検索結果(全<%= @items_search.count %>件)</h2>

    <div class="row mt-3" >
      <% @items_search.each do |item|%>
      <div class="col-md-3">
      <%= link_to item_path(item.id) do%>
        <p><%= image_tag item.get_image,size: "200x170" %></p>
      <% end %>
      <p><%= item.name %></p>
        <% if item.is_active == true %>
            <p><%= item.price %>円(税抜き)</p>
          <% else %>
            <p>販売停止中</p>
          <% end %>
          </div>
      <% end %>
      <%= paginate @items %>
      </div>
    </div>
  </div>
</div>